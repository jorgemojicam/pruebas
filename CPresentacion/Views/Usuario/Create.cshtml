@model CPresentacion.UsuarioReference.Usuario

@{
    ViewBag.Title = "Usuario";
    List<SelectListItem> listItems = new List<SelectListItem>();
    listItems.Add(new SelectListItem
    {
        Text = "Masculino",
        Value = "1"
    });
    listItems.Add(new SelectListItem
    {
        Text = "Femenino",
        Value = "2"
    });
}
<h2>Creacion</h2>

@using (Html.BeginForm("Create", "Usuario", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Ingresar Usuario</h4>
    <hr />
    <label>Nombre</label>
    @Html.TextBoxFor(model => model.Nombre)
    <br />
    <label>Fecha Nacimiento</label>  
    @Html.TextBoxFor(model => model.FechaNacimiento, new { type = "date" })
    <br />
    <label>Sexo</label>
    @Html.DropDownListFor(model => model.Sexo, listItems, "-- Seleccione --")
    <br />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Crear" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
